@model IEnumerable<TravelBlogWebApp.Models.Destination>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <!-- Add other destination properties as needed -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var destination in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => destination.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => destination.Country)
                </td>
                <!-- Add other destination properties as needed -->
                <td>
                    <a asp-action="Details" asp-route-id="@destination.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>